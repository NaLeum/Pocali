<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/list_emoticon"

        />

    <LinearLayout
        android:id="@+id/list_emoticon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:layout_above="@id/btn_messagesend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background= "@android:color/transparent"

        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_kakao"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:layout_marginLeft="15dp"/>
        <ImageView
            android:id="@+id/iv_kakaa"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>
    <Button
    android:id="@+id/btn_emoticon"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_alignParentLeft="true"
    android:padding="0dp"
    android:textSize="10dp"
        android:layout_alignParentBottom="true"

        android:text="이모티콘"/>
    <EditText
        android:id="@+id/et_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btn_messagesend"
        android:layout_toRightOf="@+id/btn_emoticon"
android:layout_alignParentBottom="true"
        />

    <Button
        android:id="@+id/btn_messagesend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전송"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"

        />



</RelativeLayout>