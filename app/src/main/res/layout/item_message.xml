<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/messageitem_liner_main"
    tools:ignore="InvalidId">

    <LinearLayout
        android:id="@+id/tv_messageitem_liner_vs"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tv_messageitem_image_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/tv_messageitem_tv_name"
            android:text="이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
     android:id="@+id/iv_emoticon"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_messageitem"
            android:layout_width="wrap_content"
            android:bufferType="spannable"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
<TextView
    android:id="@+id/tv_messageitem_readCounter_left"
    android:textColor="@android:color/holo_orange_light"
    android:textSize="9dp"
    android:layout_margin ="2dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_messageitem_time"
            android:textSize="10dp"
            android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_messageitem_readCounter_right"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="9dp"
                android:layout_margin ="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>